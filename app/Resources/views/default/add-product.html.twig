{{ form_start(form) }}
    {# render the task's only field: description #}
    {{ form_row(form.name) }}
    {{ form_row(form.price) }}
    {{ form_row(form.description) }}

    <h3>Categories</h3>
    <ul class="tags">
        
        {% for c in form.category %}
            <li>
                {{ form_widget(c) }}
                {{ form_label(c) }}
            </li>
        {% endfor %}  
    </ul>
{{ form_end(form) }}